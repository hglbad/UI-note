<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.activity.LoginNormActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_tb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/dp80"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="滑动切换登录页"
        android:layout_marginTop="@dimen/dp30"
        android:textSize="@dimen/dp18"
        android:textStyle="bold"
        android:textColor="#333" />
    
    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/magic"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dp29"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/magic"
        android:layout_marginTop="@dimen/dp20" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp26"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/agree_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已阅读并同意"
            android:textSize="@dimen/dp12"
            android:paddingTop="@dimen/dp6"
            android:paddingBottom="@dimen/dp6"
            android:button="@drawable/selector_radio_login"
            android:paddingStart="@dimen/dp5"
            android:textColor="#333"/>
        <TextView
            android:id="@+id/policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《隐私政策》"
            android:textSize="@dimen/dp12"
            android:paddingTop="@dimen/dp6"
            android:paddingBottom="@dimen/dp6"
            android:textColor="#4371ff"/>
    </LinearLayout>

    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp42"
        android:layout_marginStart="@dimen/dp48"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginEnd="@dimen/dp48"
        android:background="@drawable/shape_btn_login"
        android:gravity="center"
        android:text="登录"
        android:textColor="#fff"
        android:textSize="@dimen/dp15" />
</LinearLayout>